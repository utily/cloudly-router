{
 "name": "cloud-router",
 "version": "0.0.14",
 "description": "Router for web worker based backends such as CloudFlare Workers.",
 "author": "Cogneco AB",
 "license": "MIT",
 "repository": "https://github.com/cogneco/cloud-router",
 "bugs": {
  "url": "https://github.com/cogneco/cloud-router/issues"
 },
 "homepage": "https://github.com/cogneco/cloud-router#readme",
 "private": false,
 "main": "dist/index.js",
 "typings": "dist/index.d.ts",
 "git": {
  "tagName": "v${version}"
 },
 "github": {
  "release": true
 },
 "jest": {
  "globals": {
   "ts-jest": {
    "tsconfig": "tsconfig.test.json"
   }
  },
  "transform": {
   "^.+\\.(j|t)sx?$": "ts-jest"
  },
  "transformIgnorePatterns": [
   "<rootDir>/node_modules/(?!cloud-http/.*)"
  ],
  "testEnvironment": "node",
  "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
  "testPathIgnorePatterns": [
   "node_modules/",
   "dist/"
  ],
  "collectCoverageFrom": [
   "**/*.{ts,tsx,js,jsx}",
   "!**/node_modules/**",
   "!**/dist/**"
  ],
  "preset": "ts-jest",
  "testMatch": null
 },
 "scripts": {
  "dev": "watch 'npm run build' .",
  "lint": "eslint '**/*.{js,ts,tsx}'",
  "fix": "eslint '**/*.{js,ts,tsx}' --fix",
  "build": "tsc -p .",
  "pretest": "npm run build",
  "test": "jest",
  "test:watch": "watch jest",
  "prepare": "npm run build",
  "clean": "rm -rf dist node_modules coverage"
 },
 "dependencies": {
  "cloud-http": "0.0.31"
 },
 "devDependencies": {
  "@types/jest": "^26.0.20",
  "@typescript-eslint/eslint-plugin": "4.14.0",
  "@typescript-eslint/parser": "4.14.0",
  "eslint": "7.18.0",
  "eslint-plugin-prettierx": "github:nilssonemma/eslint-plugin-prettierx#master",
  "jest": "^26.6.3",
  "prettierx": "github:simonmika/prettierx#newline-before-clause",
  "ts-jest": "^26.4.4",
  "ts-loader": "^8.0.14",
  "typescript": "^4.1.3"
 }
}
